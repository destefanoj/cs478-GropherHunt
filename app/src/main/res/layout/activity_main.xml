<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/game_desc"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_marginTop="75dp"/>

    <ImageView
        android:id="@+id/gopher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textDesc"
        android:foregroundGravity="center"
        android:padding="10dp" />

    <Button
        android:id="@+id/guessButton"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/gopher"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="Guess-by-Guess"
        android:onClick="launchGuessMode"/>

    <Button
        android:id="@+id/contButton"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/gopher"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:text="Continuous"
        android:onClick="launchContinuousMode"/>
</RelativeLayout>